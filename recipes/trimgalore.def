Bootstrap: docker

From: ubuntu:{{ OSVersion }}

%arguments
	OSVersion=20.04

%help

TrimGalore container for trimming sequenced read

%labels

	Software TrimGalore
	Software.version 
	Recipe.version 1.0
	Maintainer leo.jourdain@etu-upsaclay.fr

%environment
	export PATH=${PATH}:/FastQC:/TrimGalore-0.6.10:${HOME}/.local/bin/

%post
	export DEBIAN_FRONTEND=noninteractive
	apt-get update && apt-get install -y \
	default-jre \
	build-essential \
	libssl-dev \
	python3-dev \
	perl \
	unzip \
	wget \
	curl

	wget -O fastqc_v0.12.1.zip  https://www.bioinformatics.babraham.ac.uk/projects/fastqc/fastqc_v0.12.1.zip \
	&& unzip fastqc_v0.12.1.zip

	wget -O Python-3.5.10.tgz  https://www.python.org/ftp/python/3.5.10/Python-3.5.10.tgz \
	&& tar -xvzf Python-3.5.10.tgz \
	&& cd Python-3.5.10 \
	&& ./configure --enable-optimizations \
	&& make \
	&& make altinstall \
	&& cd .. \
	&& wget -O cutadapt-1.11.tar.gz https://files.pythonhosted.org/packages/47/bf/9045e90dac084a90aa2bb72c7d5aadefaea96a5776f445f5b5d9a7a2c78b/cutadapt-1.11.tar.gz \
	&& tar -xvzf cutadapt-1.11.tar.gz \
	&& cd cutadapt-1.11 \
	&& python3.5 setup.py install --user \
	&& cd ..

	curl -fsSL https://github.com/FelixKrueger/TrimGalore/archive/0.6.10.tar.gz -o trim_galore.tar.gz \
	&& tar -xvzf trim_galore.tar.gz

%runscript
	echo "Script arguments: $*"
	exec trim_galore $@

%test
	OS=$(grep ^NAME= /etc/os-release | cut -d '=' -f 2)
        grep -q NAME=\"Ubuntu\" /etc/os-release
        if [ $? -eq 0 ]; then
                echo "Succes: Operating system: ${OS}"
        else
                echo "Error: Operating system: ${OS}"
                exit 1
        fi
        OS_VERSION=$(grep ^VERSION_ID= /etc/os-release | cut -d '=' -f 2)
        grep -q VERSION_ID=\"{{ OSVersion }}\" /etc/os-release
        if [ $? -eq 0 ]; then
                echo "Succes: Operating system version: ${OS_VERSION}"
        else
                echo "Error: Operating system version: ${OS_VERSION}"
                exit 1
        fi
